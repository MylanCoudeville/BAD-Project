<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B-Rock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/B_Rock.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo_b'rock.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Calendar" asp-action="Index">Calendar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: lightgray">
        <div class="d-flex justify-content-center">
            <div class="footer_informatie">
                <p class="font-weight-bold"><b>Contact</b></p>
                <p>Contact us: <br> <a href="tel:+3293358797">+32 9 335 87 97</a></p>
            </div>
            <div class="footer_informatie">
                <p class="font-weight-bold"><b>Credits</b></p>
                <p>
                    Pictures: Anne Van Aerschot, Davy De Pauw, Mirjam Devriendt, Marco Borggreve, Molina Visuals, Masha
                    Mosconi, Frederik Sadones
                </p>
                <p>Website: Mylan Coudeville</p>
                <p>© B'Rock Orchestra</p>
            </div>
            <div class="footer_informatie">
                <p class="font-weight-bold"><b>Sponsors</b></p>
                <p>B'Rock is supported by:</p>
                <img class="footer_sponser" src="~/img/Vlaanderen.png" alt="Logo Vlaanderen">
                <img class="footer_sponser" src="~/img/Nationale-Loterij.png" alt="Logo Nationale Loterij">
                <img class="footer_sponser" src="~/img/Stad-Gent.png" alt="Logo stad Gent">
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
