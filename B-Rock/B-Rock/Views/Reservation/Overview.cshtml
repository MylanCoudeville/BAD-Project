@using B_Rock.Data
@model B_Rock.Models.Reservation.ListOverviewViewModel

@{
    ViewData["Title"] = "Overview Tickets";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Concert</th>
            <th scope="col">Total price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.viewModels.Count; i++)
        {
            <tr>
                <td>@Model.viewModels[i].Quantity x</td>
                <td>
                    <b>@Model.viewModels[i].ConcertName</b> <br>
                    @Model.viewModels[i].ConcertLocation <br>
                    @Model.viewModels[i].ConcertDateAndTime.ToLongDateString() at @Model.viewModels[i].ConcertDateAndTime.ToShortTimeString()
                </td>
                <td>@Model.viewModels[i].TotalPrice euro</td>
            </tr>
        }
    </tbody>
</table>
